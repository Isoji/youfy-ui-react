{
  "manifest_version": 2,
  "name": "Youfy",
  "version": "0.1.0",
  "content_scripts": [
    {
      "matches": ["https://youtube.com/*"],
      "all_frames": true,
      "run_at": "document_idle",
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_popup": "index.html"
  },
  "permissions": ["activeTab"]
}
