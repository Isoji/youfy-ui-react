{
  "manifest_version": 2,
  "name": "Youfy",
  "version": "0.1.0",
  "icons": {
    "16": "youfy-logo.png",
    "48": "youfy-logo.png",
    "128": "youfy-logo-128.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "browser_action": {
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ],
  "permissions": [
    "activeTab",
    "tabs",
    "identity",
    "cookies",
    "https://accounts.spotify.com/*",
    "https://*.youfyapp.com/*"
  ]
}
