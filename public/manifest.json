{
  "manifest_version": 2,
  "name": "Youfy - YouTube to Spotify",
  "version": "1.0.0",
  "icons": {
    "16": "youfy-logo.png",
    "48": "youfy-logo.png",
    "128": "youfy-logo-128.png"
  },

  "browser_action": {
    "default_popup": "index.html"
  },

  "permissions": [
    "activeTab",
    "tabs",
    "identity",
    "cookies",
    "https://accounts.spotify.com/*",
    "https://*.youfyapp.com/*"
  ]
}
